{
  "name": "SQL Server Dev Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "docker run -e 'ACCEPT_EULA=Y' -e 'SA_PASSWORD=YourStrong!Passw0rd' -p 1433:1433 --name sqlserver -d mcr.microsoft.com/mssql/server:2022-latest || true",
  "customizations": {
    "vscode": {
      "settings": {
        "mssql.connections": [
          {
            "server": "localhost",
            "database": "master",
            "user": "sa",
            "password": "YourStrong!Passw0rd",
            "authenticationType": "SqlLogin",
            "trustServerCertificate": true
          }
        ]
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-mssql.mssql",
        "ms-vscode.sqltools"
      ]
    }
  },
  "forwardPorts": [
    1433
  ]
}